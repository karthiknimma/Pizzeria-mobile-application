<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="deliveryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/subTitleTextSize</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="pickupButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/subTitleTextSize</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin10dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTxtView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding10dp</item>
        <item name="android:textAppearance">@style/TitleStyle</item>
    </style>

</resources>