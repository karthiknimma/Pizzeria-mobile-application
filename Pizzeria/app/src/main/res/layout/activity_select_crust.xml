<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectCrust">

    <TextView
        android:id="@+id/selectCrustTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin10dp"
        android:text="@string/selectCrustTextView"
        android:textAppearance="@style/TitleStyle" />

    <TextView
        android:id="@+id/crustList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20dp" />

    <Button
        android:id="@+id/btnCrust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continueToAddOn" />
</LinearLayout>